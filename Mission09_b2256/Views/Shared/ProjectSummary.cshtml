@{
}
@model Books


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Publisher:</strong> @Model.Publisher</p>
        <p><strong>ISBN:</strong> @Model.Isbn</p>
        <p><strong>Classification/Category:</strong> @Model.Classification/@Model.Category</p>
        <p><strong>Number of Pages:</strong> @Model.PageCount</p>
        <p><strong>Price:</strong> @Model.Price.ToString("c")</p>
    </div>
</div>